<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.truesightid">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TrueSightID"
        tools:replace="android:icon">
        <activity
            android:name=".ui.mybookmark.MyBookmarkActivity"
            android:exported="false" />
        <activity
            android:name=".ui.myclaim.MyClaimActivity"
            android:exported="false"
            android:label="@string/title_activity_my_claim"
            android:theme="@style/Theme.TrueSightID.NoActionBar" />
        <activity
            android:name=".ui.login.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".ui.editprofile.EditProfileActivity"
            android:exported="false" />
        <activity
            android:name=".ui.main.MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.detailclaim.DetailClaimActivity" />
        <activity android:name=".ui.signup.SignupActivity" />
        <activity android:name=".ui.forgotpassword.ForgotPasswordActivity" />
        <activity android:name=".ui.resetpassword.ResetPasswordActivity" />
        <activity android:name=".ui.add_claim.AddClaimActivity" />
    </application>

</manifest>