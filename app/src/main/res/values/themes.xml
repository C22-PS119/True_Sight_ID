<resources>
    <!-- Base application theme. -->
    <style name="Theme.TrueSightID" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_dark</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/gray_dark</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >@color/black</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/AppButton</item>
        <item name="android:textColorHint">@color/gray_form</item>
    </style>
    <style name="CustomTabStyleTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="foreground_activated" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="foreground_inactivated" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">#aaa</item>
        <item name="android:textStyle">normal</item>
    </style>
    <style name="AppButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/black_soft</item>
    </style>
    <style name="GoogleButtonLogin" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/blue_soft</item>
    </style>
</resources>